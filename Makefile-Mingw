BIN = ./bin/
EXE = apov-tga-convert.exe
OBJS = main.o
OBJS := $(addprefix $(BIN), $(OBJS))

CXFLAGS = -g0 -O3 -Wpadded -Wpacked -Wall
LDFLAGS = -lstdc++

all: $(BIN)$(EXE)

$(BIN)$(EXE): $(OBJS)
	g++ -o $@ $^ $(LDFLAGS) $(CXFLAGS)

$(BIN)%.o: %.cpp
	g++ -o $@ -c $< $(CXFLAGS)
    
clean:
	powershell " Remove-Item ./bin/*.o"
	powershell " Remove-Item ./bin/*.exe"
    